---
import BaseLayout from "../layouts/BaseLayout.astro";
import Project from "../components/Project.astro";
import Writing from "../components/Writing.astro";
import { getProjects } from '../lib/projects';
import { getWritings } from '../lib/writings';
import Link from '../components/Link.astro';
import { Paragraph } from "../lib/prose/Paragraph";
import { formatDate } from "../lib/formatDate";
import border_color from '../components/Link.astro';


let posts = await Astro.glob<PostFrontmatter>("../../posts/**/*.mdx");
const projects = await getProjects();
const writings =  await getWritings();
const title = "Max Twelftree";
const description = "My small website for projects, experience and further information";

if (import.meta.env.PROD) {
  posts = posts.filter((post) => !post.frontmatter.draft);
}

posts.sort((a, b) => {
  return (
    new Date(b.frontmatter.date).getTime() -
    new Date(a.frontmatter.date).getTime()
  );
});

---

<BaseLayout title={title} description={description}>
<h1 slot="header-content" class="text-gray-600 dark:text-gray-500 mt-2"><Link href="/">Max Twelftree</Link></h1>
  <main class="py-10 zaduma-prose">
    <p class="text-gray-600 dark:text-gray-500 mb-2" style="font-size: 12px;"> ◕ ◡ ◕ っ </p>
    <p>
      Hey, I’m <strong>Max!</strong> I'm currently an undergraduate student majoring in <strong>computer science,</strong> with a strong passion for creating software and taking on challenges.
    </p>
    <p>
    Besides computer science, I enjoy <em><Link href="/travels" style="italic">travelling,</Link></em> weightlifting, language learning, and design. Please <strong>reach out</strong> if you're interested in collaborating or just want to talk. 
    <br>
    <br>
    Right now I'm working on various projects, both private and open sourced. Feel free to check some out <strong>below</strong>.
    </p>

    <hr class="border_color">

    <h2 style="font-size: 18px; font-weight: bold;">Projects</h2>
    <div class="grid grid-cols-2 gap-4 md:grid-cols-3">
      {projects.map(project => <Project project={project} />)}
    </div>

    <hr class="border_color">

    <h2 style="font-size: 18px; font-weight: bold;">Writing</h2>
    <ul>
      {posts.map(({ frontmatter }) => {
        const date = new Date(frontmatter.date);

        return (
          <li class="flex justify-between items-center">
            <Link
              href={frontmatter.path}
              class="flex-grow"
              noUnderline
            >
              <h2 class="text-gray-800 dark:text-gray-300 font-sans mb-4">
                {frontmatter.title}
              </h2>
            </Link>
            <time
              datetime={date.toISOString()}
              class="text-gray-600 dark:text-gray-400 tabular-nums tracking-tighter"
            >
              {formatDate(date)}
            </time>
          </li>
        );
      })
    }
    </ul>
    <br>

    <div class="prose">
      <hr />
      <br>
      <footer>
        <div class="name-container">
          <span>Max Twelftree</span>
        </div>
        <div class="icons-container">
          <a href="mailto:maxjtwelftree@gmail.com" aria-label="Email">
            <i class="fas fa-envelope"></i>
          </a>
          <a href="https://github.com/maxjtwelftree" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
            <i class="fab fa-github"></i>
          </a>
          <a href="https://www.linkedin.com/in/maxjtwelftree/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="https://twitter.com/mxwelllllll" target="_blank" rel="noopener noreferrer" aria-label="Twitter">
            <i class="fab fa-twitter"></i>
          </a>
        </div>
      </footer>
    </div>
  </main>
<style>
footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0; /* Remove padding to align with the footer line */
}

footer .name-container {
  margin-left: 0px; /* Add margin to the left of the name */
}

footer .icons-container {
  display: flex;
  gap: 20px;
  margin-right: 0px; /* Add margin to the right of the icons */
}

footer a {
  margin: 0; /* Reset any default margins */
  color: inherit; /* Inherit text color from parent, or set a specific color */
}

footer a i {
  font-size: 24px; /* Adjust the icon size as needed */
}
