---
import BaseLayout from "../layouts/BaseLayout.astro";
import Project from "../components/Project.astro";
import { getProjects } from '../lib/projects';
import Link from '../components/Link.astro';

const projects = await getProjects();
const title = "Max Twelftree";
const description = "My small website for projects, experience and further information";
---

<BaseLayout title={title} description={description}>
  <h1 slot="header-content" class="text-gray-600 dark:text-gray-500">Max Twelftree</h1>
  <main class="py-10 zaduma-prose">
    <p class="text-gray-600 dark:text-gray-500" style="font-size: 12px;"> ◕ ◡ ◕ っ </p>
    <p>
      Hey, I’m <strong>Max!</strong> I'm currently an undergraduate student majoring in <strong>computer science</strong> at <strong>The University of Adelaide, Australia</strong>. I enjoy creating software, taking on challenges and am a passionate competitive programmer.
    </p>
    <p>
      Besides computer science, I enjoy <strong>weightlifting, language learning</strong> and <strong>travelling</strong>. Please <strong>reach out</strong> if you're interested in collaborating or want to talk about anything to do with computer science, weightlifting, competitive programming or the nuances of language learning.
    </p>
    <p>
      Right now I'm working on various projects, both private and open sourced. Feel free to check them out CHECKING IF UPDATING this pahge<strong>below</strong>.
    </p>

    <h2 style="font-size: 18px; font-weight: bold;">Projects</h2>
    <div class="grid grid-cols-2 gap-4 md:grid-cols-3">
      {projects.map(project => <Project project={project} />)}
    </div>
    <br>
    <br>
    <br>

    <div class="prose">
      <hr />
      <br>
      <footer>
        <div class="name-container">
          <span>Max Twelftree</span>
        </div>
        <div class="icons-container">
          <a href="mailto:maxjtwelftree@gmail.com" aria-label="Email">
            <i class="fas fa-envelope"></i>
          </a>
          <a href="https://github.com/maxjtwelftree" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
            <i class="fab fa-github"></i>
          </a>
          <a href="https://www.linkedin.com/in/maxjtwelftree/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="/maxtwelftree-resume.pdf" target="_blank" rel="noopener noreferrer" aria-label="Twitter">
            <i class="fas fa-file-pdf"></i> <!-- Replace with your PDF icon or use an emoji/text -->
          </a>
        </div>
      </footer>
    </div>
  </main>
<style>
footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0; /* Remove padding to align with the footer line */
}

footer .name-container {
  margin-left: 0px; /* Add margin to the left of the name */
}

footer .icons-container {
  display: flex;
  gap: 20px;
  margin-right: 0px; /* Add margin to the right of the icons */
}

footer a {
  margin: 0; /* Reset any default margins */
  color: inherit; /* Inherit text color from parent, or set a specific color */
}

footer a i {
  font-size: 24px; /* Adjust the icon size as needed */
}
